<%- include("templates/header", { cssFiles: ['/bookingAvailability.css'] }) %>

<div
    class="container"
    style="margin-top: 80px; border-radius: 15px; margin-bottom: 100px; background-color: white"
>
    <div style="padding: 20px">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel" style="text-align: center;">
                    Create New Tent
                </h1>
                <button
                    type="button"
                    class="btn-close"
                    onclick="window.location.href='/campsite-info/<%= campsiteId %>'"
                ></button>
            </div>
            <div class="modal-body">
                <form
                    id="bookingForm"
                    style="height: 100%; display: flex; flex-direction: column"
                >
                    <div class="container">
                        <label>Campsite:</label>
                        <p class="readonly"><%= campsiteName %></p>


                        <label>Start Date:</label>
                        <div class="input-icon">
                            <input type="date" id="startDate"/>
                        </div>

                        <label>End Date:</label>
                        <div class="input-icon">
                            <input type="date" id="endDate"/>
                        </div>

                        <label>Number of Available Tent spots:</label>
                        <input type="number" id="tentSpots"/>

                        <label>Contact Details:</label>
                        <input type="text" id="contactInfo"/>

                        <label>Summary:</label>
                        <textarea rows="4" id="summary"></textarea>
                    </div>
                    <button type="submit">Submit</button>
                    <!-- Hidden campsiteId -->
                    <input type="hidden" id="campsiteId" value="<%= campsiteId %>">
                    <input type="hidden" id="userId" value="<%= userId %>">
                    <input type="hidden" id="firstName" value="<%= firstName %>">
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/createBooking.js"></script>
