<%- include("templates/header", { cssFiles: ['/bookingAvailability.css'] }) %>

<div
    class="container"
    style="margin-top: 80px; border-radius: 15px; margin-bottom: 100px; background-color: white"
>
    <div style="padding: 20px">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">
                    Create New Tent
                </h1>
                <button
                    type="button"
                    class="btn-close"
                    onclick="window.location.href='/campsite-info/<%= campsiteId %>'"
                ></button>
            </div>
            <div class="modal-body">
                <form
                    id="bookingForm"
                    style="height: 100%; display: flex; flex-direction: column"
                >
                    <div class="container">
                        <label>Campsite:</label>
                        <p class="readonly">Campsite XYZ</p>

                        <input type="text" placeholder="Search Campsites" />

                        <label>Start Date:</label>
                        <div class="input-icon">
                            <input type="date" />
                        </div>

                        <label>End Date:</label>
                        <div class="input-icon">
                            <input type="date" />
                        </div>

                        <label>Number of Available Tent spots:</label>
                        <input type="number" />

                        <label>Preferred means of Contact:</label>
                        <input type="text" />

                        <label>Summary:</label>
                        <textarea rows="4"></textarea>
                    </div>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

