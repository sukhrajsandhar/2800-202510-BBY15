<%- include('templates/header', { cssFiles: ['/styles.css', '/footer.css', '/alerts.css', '/header.css', '/bg.css'] }) %>

<div class="container" style="margin-top: 80px; margin-bottom: 100px; max-width: 700px; overflow-y: auto;">
  <h4 class="mb-4">Reviews for <%= campsite.name %></h4>

  <% if (reviews && reviews.length > 0) { %>
    <% reviews.forEach(function(review) { %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="d-flex align-items-center">
              <div>
                <img 
                  style="width: 40px; height: 40px; background-color: #D0DDD7; border-radius: 50%;" 
                  src="/images/avatars/avatar<%= (Math.floor(Math.random() * 6) + 1) %>.png" 
                  alt="avatar"
                >
              </div>
              <div class="ms-2">
                <h6 class="mb-0"><%= user.firstName + ' ' + user.lastName %></h6>
                <div class="text-warning">
                    <small class="text-muted">
                        <% if (review.overallRating) { 
                            const fullStars = 'ðŸŒŸ'.repeat(review.overallRating);
                        %>
                            <%= fullStars %>
                        <% } else { %>
                            No rating
                        <% } %>
                    </small>
                </div>
              </div>
            </div>
            <small class="text-muted"><%= new Date(review.dateVisited).toLocaleDateString() %></small>
          </div>

          <div class="mb-2">
            <% if (review.electricityWaterHookups === "Yes") { %>
              <span class="badge bg-light text-dark border">Electricity/Water</span>
            <% } %>
            <% if (review.picnicTables === "Yes") { %>
              <span class="badge bg-light text-dark border">Picnic Tables</span>
            <% } %>
            <% if (review.firePitsGrills === "Yes") { %>
              <span class="badge bg-light text-dark border">Fire Pits</span>
            <% } %>
            <% if (review.cellService === "Yes") { %>
              <span class="badge bg-light text-dark border">Cell Service</span>
            <% } %>
            <% if (review.trashRecycleBins === "Yes") { %>
              <span class="badge bg-light text-dark border">Trash Bins</span>
            <% } %>
            <% if (review.washrooms) { %>
              <span class="badge bg-light text-dark border"><%= review.washrooms %></span>
            <% } %>
            <% if (review.dogFriendly === "Yes") { %>
              <span class="badge bg-light text-dark border">Dog-friendly</span>
            <% } %>
          </div>

          <p class="mb-0"><%= review.additionalComments %></p>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>No reviews available for this campsite.</p>
  <% } %>

</div>
  <%- include("templates/bg") %>
<%- include('templates/footer') %>

