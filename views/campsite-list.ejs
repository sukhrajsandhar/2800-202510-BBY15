<!DOCTYPE html>
<html lang="en">
<head>
  <title>Campsite List</title>
  <link rel="stylesheet" href="/main.css">
  <style>
    .campsite-table { width: 100%; border-collapse: collapse; margin: 2em 0; }
    .campsite-table th, .campsite-table td { border: 1px solid #ddd; padding: 8px; }
    .campsite-table th { background: #f4f4f4; }
    .campsite-table tr:hover { background: #f1f7ff; }
    .view-btn { color: #1976d2; text-decoration: underline; cursor: pointer; }
  </style>
</head>
<body>
  <h2 style="margin:1em 0;">All Campsites</h2>
  <table class="campsite-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Location</th>
        <th>Rating</th>
        <th>Season</th>
        <th>Difficulty</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% campsites.forEach(site => { %>
        <tr>
          <td><%= site.name %></td>
          <td><%= site.type %></td>
          <td><%= site.place_name || (site.coordinates ? site.coordinates.join(', ') : '') %></td>
          <td><%= site.rating %></td>
          <td><%= site.season %></td>
          <td><%= site.difficulty %></td>
          <td>
            <a class="view-btn" href="/main?lat=<%= site.coordinates[1] %>&lng=<%= site.coordinates[0] %>">View on Map</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html> 